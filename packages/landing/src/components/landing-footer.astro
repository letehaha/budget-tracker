---
const currentYear = new Date().getFullYear();
---

<footer class="border-border/40 relative overflow-hidden border-t py-12">
  <!-- Background gradient -->
  <div class="pointer-events-none absolute inset-0">
    <div
      class="footer-orb absolute -bottom-1/2 left-1/2 size-150 -translate-x-1/2 rounded-full bg-linear-to-t from-purple-500/5 via-pink-500/5 to-transparent blur-3xl"
    ></div>
  </div>

  <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col flex-wrap items-center justify-between gap-6 sm:flex-row">
      <div class="flex w-full items-center justify-between gap-6 max-sm:flex-col">
        <!-- Logo -->
        <div class="flex items-center gap-2">
          <div
            class="from-primary flex size-8 items-center justify-center rounded-lg bg-linear-to-br to-purple-600"
          >
            <!-- CircleDollarSign icon -->
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="size-5 text-white"><circle cx="12" cy="12" r="10"/><path d="M16 8h-6a2 2 0 1 0 0 4h4a2 2 0 1 1 0 4H8"/><path d="M12 18V6"/></svg>
          </div>
          <span class="font-semibold">MoneyMatter</span>
        </div>

        <!-- Links -->
        <div class="text-muted-foreground flex flex-wrap items-center justify-center gap-x-6 gap-y-2 text-sm">
          <a
            href="https://github.com/letehaha/budget-tracker"
            target="_blank"
            rel="noopener noreferrer"
            class="hover:text-foreground transition-colors"
            data-track="landing_github_clicked"
            data-track-location="footer"
          >
            GitHub
          </a>
          <a href="/sign-in" class="hover:text-foreground transition-colors">
            Sign In
          </a>
          <a href="/sign-up" class="hover:text-foreground transition-colors">
            Sign Up
          </a>
          <a href="/privacy-policy" class="hover:text-foreground transition-colors">
            Privacy Policy
          </a>
          <a href="/terms-of-use" class="hover:text-foreground transition-colors">
            Terms of Use
          </a>
        </div>
      </div>

      <!-- Copyright -->
      <p class="text-muted-foreground mx-auto text-sm">
        &copy; {currentYear} MoneyMatter. Open source under CC BY-NC-SA 4.0.
      </p>
    </div>
  </div>
</footer>

<style>
  .footer-orb {
    animation:
      footer-float 12s infinite,
      footer-pulse 4s ease-in-out infinite;
  }

  @keyframes footer-float {
    0%,
    100% {
      transform: translate(0, 0);
    }
    33% {
      transform: translate(3%, 4%);
    }
    66% {
      transform: translate(-2%, -2%);
    }
  }

  @keyframes footer-pulse {
    0%,
    100% {
      opacity: 0.5;
      scale: 1;
    }
    50% {
      opacity: 0.8;
      scale: 1.15;
    }
  }
</style>
